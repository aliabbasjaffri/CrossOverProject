<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please fill in Conference Details"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newConferenceTopicEditText"
        android:layout_gravity="center_horizontal"
        android:hint="Topic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newConferenceSummaryEditText"
        android:layout_gravity="center_horizontal"
        android:lines="2"
        android:hint="Please provide brief Summary" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newConferenceLocationEditText"
        android:layout_gravity="center_horizontal"
        android:hint="Location" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newConferenceDateEditText"
        android:layout_gravity="center_horizontal"
        android:hint="Date" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:onClick="showDatePickerDialog" />
    
</LinearLayout>